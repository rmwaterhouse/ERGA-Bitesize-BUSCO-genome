{
  "name": "Bioconda Environment",
  "image": "mcr.microsoft.com/devcontainers/miniconda:latest",
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/opt/conda/envs/bitesize/bin/python",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "args": ["-c", "conda activate bitesize && exec bash"]
          }
        },
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
